<h1>Cadastrar Produto</h1>
<form method="post" action="/Produto/Creater">

    <div class="mb-3">
        <label for="descricao" class="form-label">Descrição</label>
        <input type="text" class="form-control" name="descricao" id="descricao" maxlength="50">
    </div>
    <div class="mb-3">
        <label for="unidademedida" class="form-label">UnidadeDeMedida</label>
        <input type="text" class="form-control" name="unidademedida" id="unidademedida" maxlength="10">
    </div>
    <div class="mb-3">
        <label for="estoqueatual" class="form-label">EstoqueAtual</label>
        <input type="number" class="form-control" name="estoqueatual" id="estoqueatual" maxlength="10">
    </div>
    <select for="epermanente" class="form-select form-select-sm aria-label="Large select example">
        <option selected>ÉPermanente</option>
        <option value="1">sim</option>
        <option value="2">não</option>
    </select>
    <div class="mb-3">
        <label for="codigocategoria" class="form-label">CodigoCategoria</label>
        <input type="number" class="form-control" name="codigocategoria" id="codigocategoria" maxlength="10">
    </div>


    <button class="btn btn-primary" href="https://localhost:7215/Produto">
        Voltar
    </button>
    <button type="submit" class="btn btn-primary">
        Salvar
    </button>

</form>

