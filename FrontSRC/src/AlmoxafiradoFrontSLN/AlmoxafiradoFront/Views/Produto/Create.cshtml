<h1>Cadastrar categoria</h1>
<form method="post" action="/Categoria/Cadastrar">

    <div class="mb-3">
        <label for="descricao" class="form-label">Descrição</label>
        <input type="text" class="form-control" name="descricao" id="descricao" maxlength="50">
    </div>
    <div class="mb-3">
        <label for="unidademedida" class="form-label">UnidadeDeMedida</label>
        <input type="text" class="form-control" name="unidademedida" id="unidademedida" maxlength="50">
    </div>
    <div class="mb-3">
        <label for="estoqueatual" class="form-label">EstoqueAtual</label>
        <input type="number" class="form-control" name="estoqueatual" id="estoqueatual" maxlength="50">
    </div>

    <button class="btn btn-primary" href="https://localhost:7215/Categoria">
        Voltar
    </button>
    <button type="submit" class="btn btn-primary">
        Salvar
    </button>

</form>











